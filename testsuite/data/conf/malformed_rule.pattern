{setup,
  fun() ->
      application:start(yamerl),
      application:start(otis),
      otis_app:set_param(engine_save_dir, os:getenv("PWD"))
  end,
  fun(_) ->
      error_logger:tty(false),
      ok = application:stop(otis),
      ok = application:stop(yamerl)
  end,
  [
    ?_assertThrow(
      invalid_conf,
      otis_conf:load("${FILENAME}")
    )
  ]
}
